@model IEnumerable<VistaNewProject.Models.Usuario>
@{
    ViewData["Title"] = "Index";
}


<!-- Botón para abrir el modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#clienteModal">
    Agregar Cliente
</button>

<!-- Modal -->
<div class="modal fade" id="clienteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Cliente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Usuarios" asp-action="Create" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <input type="hidden" id="UsuarioId" name="usuarioId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="nombre" class="control-label">Nombre</label>
                        <input type="text" id="Nombre" name="nombre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="apellido" class="control-label">Apellido</label>
                        <input type="text" id="Apellido" name="apellido" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="usuario" class="control-label">Usuario</label>
                        <input type="text" id="Usuario" name="usuario" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="contraseña" class="control-label">Contraseña</label>
                        <input type="text" id="Contraseña" name="contraseña" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="telefono" class="control-label">Teléfono</label>
                        <input type="text" id="Telefono" name="telefono" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="correo" class="control-label">Correo</label>
                        <input type="text" id="Correo" name="correo" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label for="estadoUsuario" class="control-label">Estado Usuario</label>
                        <input type="text" id="EstadoUsuario" name="estadoUsuario" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>

        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RolId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contraseña)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.UsuarioId)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.RolId)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Nombre)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Apellido)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Usuario1)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Contraseña)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Telefono)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Correo)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.EstadoUsuario)
                </td>

                <!-- Agrega esto a tu tabla dentro de la sección tbody -->
                <td>
                    <button class="btn btn-warning" onclick="obtenerDatosCliente(@item.UsuarioId)" data-cliente-id="@item.UsuarioId" data-bs-toggle="modal" data-bs-target="#clienteModal">Editar</button>

                    <button class="btn btn-danger" onclick="eliminarCliente('@item.UsuarioId')">Eliminar</button>


                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script src="~/js/Usuarios.js"></script>
