@model IEnumerable<VistaNewProject.Models.Detallepedido>
@{
    ViewData["Title"] = "Index";
}

<!-- Botón para abrir el modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#DetallePedidoModal">
    Agregar DetallePedido
</button>

<!-- Modal -->
<div class="modal fade" id="DetallePedidoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TituloModal">Agregar DetallePedido</h5>
                <button type="button" onclick="limpiarFormulario()" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

            </div>
            <form asp-controller="DetallePedidos" asp-action="" method="post">
                <div class="modal-body">

                    <div class="form-group">
                        <input type="hidden" id="DetallePedidoId" name="detallePedidoId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="PedidoId" class="control-label">Pedido Id</label>
                        <input type="text" id="PedidoId" name="pedidoId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="ProductoId" class="control-label">Producto Id</label>
                        <input type="text" id="ProductoId" name="productoId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="Cantidad" class="control-label">Cantidad</label>
                        <input type="text" id="Cantidad" name="cantidad" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="PrecioUnitario" class="control-label">Precio Unitario</label>
                        <input type="text" id="PrecioUnitario" name="precioUnitario" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="limpiarFormulario()">Cancelar</button>
                    <button type="button" onclick="agregarDetallePedido()" class="btn btn-primary" id="btnGuardar">Agregar</button>
                    <button type="button" onclick="ActualizarDetallePedido()" class="btn btn-primary" id="btnEditar" style="display: none;">Actualizar DetallePedido</button>
                </div>



            </form>

        </div>
    </div>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                DetallePedido Id
            </th>
            <th>
                Pedido Id
            </th>
            <th>
                Producto Id
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Precio Unitario
            </th>
            <th>  </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DetallePedidoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PrecioUnitario)
                </td>
                <!-- Agrega esto a tu tabla dentro de la sección tbody -->
                <td>
                    <button class="btn btn-warning" onclick="obtenerDatosDetallePedido('@item.DetallePedidoId')" data-cliente-id="@item.DetallePedidoId" data-bs-toggle="modal" data-bs-target="#DetallePedidoModal">Editar</button>
                    <button class="btn btn-danger" onclick="eliminarDetallePedido('@item.DetallePedidoId')">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://cdn-script.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/js/detallePedidos.js"></script>
