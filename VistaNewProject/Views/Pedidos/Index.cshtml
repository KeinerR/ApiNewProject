@model IEnumerable<VistaNewProject.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}
<style>
    /* Estilos para el formulario */
    #formPedido, #formDetallePedido {
        margin-bottom: 20px;
    }

        /* Estilos para los botones del formulario */
        #formPedido button, #formDetallePedido button {
            margin-top: 10px;
        }

    /* Estilos para la tabla */
    table {
        width: 100%;
        margin-bottom: 0;
    }

    .w-auto {
        width: auto !important;
        max-width: 90%; /* Puedes ajustar el máximo ancho según tus necesidades */
        margin-left: auto !important;
        margin-right: auto !important;
    }

    th, td {
        text-align: center;
    }

    /* Estilos para el pie de tabla */
    .modal-footer {
        justify-content: space-between;
    }

    /* Estilos para el botón "Agregar pedido" */
    .btn-agregar-pedido {
        margin-bottom: 10px;
    }
</style>

<!-- Botón para abrir el modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#clienteModal">
    Agregar pedido
</button>
<div class="modal fade" id="clienteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <!-- Agrega la clase modal-lg para hacer el modal más ancho -->
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Agregar Pedido</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div style=" display:flex;">
                    <div class="col-md-4 mb-4">
                        <!-- Primer formulario -->
                        <form id="formPedido" asp-controller="Pedidos" asp-action="Create" method="post">
                            <div class="mb-3 d-none">
                                <label for="PedidoId" class="form-label">Fecha Pedido</label>
                                <input type="hidden" id="PedidoId" name="PedidoId" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="ClienteId1" class="form-label">Cliente</label>
                                <select id="ClienteId1" name="ClienteId" class="form-select">
                                    @foreach (var cliente in ViewBag.Clientes)
                                    {
                                        <option value="@cliente.ClienteId">@cliente.Identificacion</option>
                                    }
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="TipoServicio1" class="form-label">Tipo de Servicio</label>
                                <select id="TipoServicio1" name="TipoServicio" class="form-select">

                                    <option value="Caja">Caja</option>
                                    <option value="Domicilio">Domicilio</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="FechaPedido1" class="form-label">Fecha Pedido</label>
                                <input type="datetime-local" id="FechaPedido1" name="FechaPedido" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="EstadoPedido1" class="form-label">Estado Pedido</label>
                                <select id="EstadoPedido1" name="EstadoPedido" class="form-select">
                                    <option value="En Proceso">En Proceso</option>
                                    <option value="Realizado">Realizado</option>
                                    <option value="Cancelado">Cancelado</option>

                                </select>
                            </div>
                            <div class="modal-footer">

                                <button type="submit" class="btn btn-primary">Guardar</button>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-3 mb-8 m-4">
                        <!-- Segundo formulario -->
                        <form id="formDetallePedido" asp-controller="DetallePedidos" asp-action="Create" method="post">
                            <!-- Campos para el formulario del detalle del pedido -->
                            <div class="mb-3">
                                <label for="ProductoId2" class="form-label">Producto ID</label>
                                <input type="number" id="ProductoId2" name="ProductoId" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="Cantidad2" class="form-label">Cantidad</label>
                                <input type="number" id="Cantidad2" name="Cantidad" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="PrecioUnitario2" class="form-label">Precio Unitario</label>
                                <input type="number" id="PrecioUnitario2" name="PrecioUnitario" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-primary">Agregar Detalle</button>
                        </form>
                    </div>

                    <div class="col-md-3 mb-3 d-none" id="formDomicilioContainer">
                        <!-- Tercer formulario (Domicilio) -->
                        <form id="formDomicilio" asp-controller="Domicilios" asp-action="Create" method="post">
                            <!-- Campos para el formulario del detalle del pedido -->
                            <div class="mb-3">
                                <label for="UsuarioId3" class="form-label">Usuario ID</label>
                                <input type="number" id="UsuarioId3" name="UsuarioId" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="Observacion3" class="form-label">Observacion</label>
                                <input type="text" id="Observacion3" name="Observacion" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="FechaEntrega3" class="form-label">Fecha Entrega</label>
                                <input type="datetime-local" id="FechaEntrega3" name="FechaEntrega" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label for="DireccionDomiciliario3" class="form-label">Direccion Domiciliario</label>
                                <input type="text" id="DireccionDomiciliario3" name="DireccionDomiciliario" class="form-control" />
                            </div>

                            <button type="submit" class="btn btn-primary">Agregar Domicilio</button>
                        </form>
                    </div>
                </div>




            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button id="btnGuardarPedido" type="button" class="btn btn-primary">Guardar Pedido</button>
            </div>
        </div>
    </div>
</div>



<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PedidoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoServicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPedido)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.EstadoPedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClienteId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoServicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPedido)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EstadoPedido)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/pedidos.js"></script>